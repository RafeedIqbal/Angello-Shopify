{{ 'section-course-showcase.css' | asset_url | stylesheet_tag }}

<div class="course-showcase page-width section-{{ section.id }}-padding">
  {%- if section.settings.heading != blank -%}
    <div class="course-showcase__heading-container center">
      <h2 class="course-showcase__heading">
        {{ section.settings.heading }}
      </h2>
    </div>
  {%- endif -%}

  <div class="course-showcase__grid">
    {%- for block in section.blocks -%}
      <div class="course-showcase__card" {{ block.shopify_attributes }}>
        <div class="course-showcase__icon-wrapper">
          <div class="course-showcase__icon">
            {%- if block.settings.custom_icon != blank -%}
              {{ block.settings.custom_icon }}
            {%- elsif block.settings.icon == 'location' -%}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="icon icon-location"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            {%- elsif block.settings.icon == 'clipboard' -%}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="icon icon-clipboard"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 01-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 011.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 00-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 01-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 00-3.375-3.375h-1.5a1.125 1.125 0 01-1.125-1.125v-1.5a3.375 3.375 0 00-3.375-3.375H9.75" />
              </svg>
            {%- elsif block.settings.icon == 'gift' -%}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="icon icon-gift"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 11.25v8.25a1.5 1.5 0 01-1.5 1.5H4.5a1.5 1.5 0 01-1.5-1.5v-8.25M22.5 7.5H1.5m16.5 0V4.5a2.25 2.25 0 00-2.25-2.25h-7.5A2.25 2.25 0 006 4.5v3m13.5 0v3m-2.25 0h2.25m-2.25 0H5.25m2.25 0h-2.25m2.25 0v-3" />
              </svg>
            {%- endif -%}
          </div>
        </div>

        <div class="course-showcase__content">
          <h3 class="course-showcase__card-title">{{ block.settings.title | escape }}</h3>
          <div class="course-showcase__card-text rte">{{ block.settings.text }}</div>

          {%- if block.settings.link_label != blank -%}
            <a href="{{ block.settings.link_url }}" class="course-showcase__button button">
              {{ block.settings.link_label | escape }}
            </a>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Course Showcase",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "default": "<p>BRING <em>ON THE GREEN FOR MEN</em><br>TO YOUR COURSE</p>",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Card",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "options": [
            {
              "value": "location",
              "label": "Location"
            },
            {
              "value": "clipboard",
              "label": "Clipboard"
            },
            {
              "value": "gift",
              "label": "Gift"
            }
          ],
          "default": "location",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "custom_icon",
          "label": "Custom SVG Icon (Optional)",
          "info": "Paste SVG code here to override the selected icon."
        },
        {
          "type": "text",
          "id": "title",
          "default": "Feature Title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Description of feature.</p>",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "link_label",
          "default": "LEARN MORE",
          "label": "Link label"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Course Showcase",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "PRO SHOP SHOWCASE",
            "icon": "location"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "LOCKER ROOM LUXURY",
            "icon": "clipboard"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "TOURNAMENT & MEMBER GIFTS",
            "icon": "gift"
          }
        }
      ]
    }
  ]
}
{% endschema %}
