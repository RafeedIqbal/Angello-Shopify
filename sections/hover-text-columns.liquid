<div class="hover-text-columns color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="hover-text-columns__grid">
      {%- for block in section.blocks -%}
        <div class="hover-text-column" {{ block.shopify_attributes }}>
          <div class="hover-text-column__content">
            <h3 class="hover-text-column__heading h2">{{ block.settings.heading | escape }}</h3>
            <div class="hover-text-column__hover-text rte">{{ block.settings.hover_text }}</div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hover-text-columns__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .hover-text-columns__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .hover-text-column {
    position: relative;
    cursor: default;
    min-height: 100px; /* Ensure minimum height */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hover-text-column__content {
    display: grid;
    place-items: center;
    width: 100%;
  }

  .hover-text-column__heading,
  .hover-text-column__hover-text {
    grid-area: 1 / 1;
    transition: opacity 0.4s ease, transform 0.4s ease;
    margin: 0;
  }

  .hover-text-column__heading {
    opacity: 1;
    transform: translateY(0);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .hover-text-column__hover-text {
    opacity: 0;
    transform: translateY(10px);
    font-style: italic;
  }

  .hover-text-column:hover .hover-text-column__heading {
    opacity: 0;
    transform: translateY(-10px);
  }

  .hover-text-column:hover .hover-text-column__hover-text {
    opacity: 1;
    transform: translateY(0);
  }
</style>

